<resources>
    <!-- Application theme (Day) -->
    <style name="Theme.FilmJoy" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/filmJoyPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/filmJoyPrimaryColorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/filmJoySecondaryColor</item>
        <item name="colorSecondaryVariant">@color/filmJoySecondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- SplashScreen (Day) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/filmJoySecondaryColor</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.FilmJoy</item>
    </style>

    <!-- Text Styles (Day) START -->

    <style name="titleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="sectionTitleText" parent="titleText">
        <item name="android:textColor">@color/filmJoyPrimaryColorDark</item>
    </style>

    <style name="primaryText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
    </style>

    <style name="secondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="smallText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <!-- Text Styles END -->

    <!-- Widget Styles (Day) - START -->

    <style name="viewSeparator" parent="Theme.FilmJoy">
        <item name="android:background">@color/filmJoyPrimaryColor</item>
    </style>

    <style name="actionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/filmJoyPrimaryColorDark</item>
        <item name="android:background">@color/filmJoySecondaryColor</item>
    </style>

    <style name="logoImageActionBar" parent="Theme.FilmJoy">
        <item name="android:src">@drawable/filmjoy_logo_64px</item>
    </style>

    <!-- Widget Styles (Day) - END -->
</resources>