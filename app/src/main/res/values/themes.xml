<resources>
    <!-- Base application theme. -->
    <style name="Theme.FilmJoy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/filmJoyPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/filmJoyPrimaryColorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/filmJoySecondaryColor</item>
        <item name="colorSecondaryVariant">@color/filmJoySecondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/filmjoy_logo_128px</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.FilmJoy</item>
    </style>


</resources>